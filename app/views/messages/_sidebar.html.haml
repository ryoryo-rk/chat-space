.sidebar
  .sidebar__user
    %p.sidebar__user__username #{current_user.name}
    = link_to edit_user_path(current_user.id), class: "sidebar__user__btn-right" do
      %i.fa.fa-cog
    = link_to new_group_path, class: "sidebar__user__btn-left" do
      %i.fa.fa-pencil-square-o

  - current_user.groups.each do |group|
    .sidebar__groups-list
      .sidebar__group
        = group.name
        %p.group-message
          = group.message_display if group.messages.present?
